@font-face {
  font-family: droid-sans;
  src: url(DroidSans.ttf);
}

.fancyBox {
	padding:10px;
	margin:5px;
	display: inline-block;
	border-style: groove;
	border-width: 8px;
	text-align: left;
	border-color:#FEC283;
	font-size:20px;
	background-color:#FFCC99;
}

#poolDiv {
	display: inline-block;
	min-height: 10px;
	min-width: 10px;
	margin: 5px;
}

.singleStash {
	display: inline-block;
	min-height: 10px;
	min-width: 10px;
	vertical-align: top;
	padding: 30px;
	width:auto;
	white-space: nowrap;
	border-style:dashed;
	border-width:5px;
	height:500px;
	overflow:auto;
}

body {
	background-color:#99CCFF;
	font-family: droid-sans;
	font-size:20px;
}

.wordDiv {
	display:inline-block;
	height:40px;
	padding:3px;
}

.hasBorder {
	background-color: white;
}

button {
	display: inline-block;
	border-style: groove;
	border-width: 2px;
	border-color: #FC9;
	font-size:12px;
	background-color:#FC9;
	border-radius:7px;
}

.tile {
	width:40px;
	height:40px;
}

div#nav_links {
    width: 80px;
    position: absolute;
    top: 30px;
    right: 10px;
    font-size: 12px;
}

#winner {
    text-align: center;
}
