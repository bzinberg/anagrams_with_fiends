@font-face {
  font-family: droid-sans;
  src: url(DroidSans.ttf);
}

.lobbyBox {
	padding:15px;
	display: inline-block;
	border-style: groove;
	border-width: 10px;
	border-color:#FEC283;
	font-size:30px;
	background-color:#FFCC99;
	vertical-align: center;
}

#poolDiv {
	display: inline-block;
	min-height: 10px;
	min-width: 10px;
}

.singleStash {
	display: inline-block;
	min-height: 10px;
	min-width: 10px;
	vertical-align: top;
	padding: 30px;
	width:auto;
	border-style:dashed;
	border-width:5px;
	height:500px;
	overflow-x:hidden;
	overflow-y:scroll
}

body {
	background-color:#99CCFF;
	font-family: droid-sans;
	font-size:20px;
}

.wordDiv {
	display:inline-block;
	height:40px;
	padding:3px;
}

.hasBorder {
	background-color: white;
}

button {
	display: inline-block;
	border-style: groove;
	border-width: 5px;
	border-color:#FEC283;
	font-size:15px;
	background-color:#FFCC99;
	border-radius:7px;
}

.tile {
	width:40px;
	height:40px;
}

div#nav_links {
    width: 80px;
    position: absolute;
    top: 30px;
    right: 10px;
    font-size: 12px;
}
