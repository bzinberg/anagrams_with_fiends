@font-face {
  font-family: droid-sans;
  src: url('<%= asset_path 'fonts/DroidSans.ttf' %>');
}

bagDiv {
	padding:15px;
	display: inline-block;
	border-style: groove;
	border-width: 10px;
	border-color:#FEC283;
	font-size:30px;
	background-color:#FFCC99;
}

poolDiv {
	display: inline-block;
	min-height: 10px;
	min-width: 10px;
}

stashDiv {
	padding:15px;
	display: inline-block;
	border-style: groove;
	border-width: 10px;
	border-color:#FEC283;
	font-size:30px;	
	background-color:#FFCC99;

}
body {
	background-color:#99CCFF;
	font-family: droid-sans;
	font-size:20px;
}

.wordDiv {
	display:inline-block;
	height:40px;
	padding:3px;
}

.hasBorder {
	background-color: white;
}

button {
	display: inline-block;
	border-style: groove;
	border-width: 5px;
	border-color:#FEC283;
	font-size:15px;
	background-color:#FFCC99;
	border-radius:7px;
}

.tile {
	width:40px;
	height:40px;
}
