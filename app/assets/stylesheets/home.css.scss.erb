@font-face {
  font-family: droid-sans;
  src: url(DroidSans.ttf);
}

#lobbyDiv {
	align: center;
	width: 600px;
	height: 400px;
}

.onlineBox {
	padding:15px;
	display: inline-block;
	border-style: groove;
	border-width: 10px;
	border-color:#FEC283;
	font-size:20px;
	background-color:#FFCC99;
	vertical-align: center;
}

#onlineUsersDiv {
	width: 200px;
	height: 300px;

	float:left;
	white-space: nowrap;
	overflow:auto;
}

#challengesDiv {
	float: right;
	width: 300px;
}

#outgoingChallengeDiv {
	width: 300px;
	height: 50px;

	overflow:auto;
}

#incomingChallengesDiv {
	width: 300px; 
	height: 100%;

	overflow:auto;
	white-space: nowrap;
}

