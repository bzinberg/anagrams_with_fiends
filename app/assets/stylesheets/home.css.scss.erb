@font-face {
  font-family: droid-sans;
  src: url(DroidSans.ttf);
}

#lobbyDiv {
	align: center;
	width: 500px;
	height: 400px;
}

.lobbyBox {
	padding:15px;
	display: inline-block;
	border-style: groove;
	border-width: 10px;
	border-color:#FEC283;
	font-size:30px;
	background-color:#FFCC99;
	vertical-align: center;
}

#formDiv {
	width: 200px;
	height: 300px;

	float:left;
	white-space: nowrap;
	overflow:auto;
}

#challengesDiv {
	float: right;
	width: 200px;
}

#currentChallengeDiv {
	width: 100%;
	height: auto;

	text-align: left;
	overflow:auto;
	white-space: nowrap;	
}

#challengersDiv {
	width: 100%; 
	height: auto;

	background-color:#FFCC99;
	overflow:auto;
	white-space: nowrap;
}

